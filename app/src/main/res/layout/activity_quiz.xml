<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white1"
    tools:context="cmesapp.cmes_app.Quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/shadow">
        <RelativeLayout
            android:id="@+id/id_header_quiz"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="70dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:id="@+id/id_back_quiz"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/back_arrow"
                android:layout_margin="5dp"
                android:clickable="true"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white1"
                    android:textAllCaps="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:shadowColor="#494949"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="QUIZ"/>

                <TextView
                    android:id="@+id/id_level_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white1"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Level 1"/>


            </LinearLayout>



            <TextView
                android:visibility="gone"
                android:id="@+id/id_timer_quiz"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_timer"
                android:textColor="@color/white1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:shadowColor="#494949"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="20"/>




        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">



            <ImageView
                android:id="@+id/id_image_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:src="@drawable/seeds"/>




        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/background_left">

                <TextView
                    android:id="@+id/id_no_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white2"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="1/20"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@drawable/background_center">


                <TextView
                    android:id="@+id/id_points_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black_grey"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="0 point"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="30"
                android:background="@drawable/background_right">


                <TextView
                    android:id="@+id/id_additionScore_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+1"
                    android:textAllCaps="true"
                    android:textColor="@color/white2"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="50"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <RelativeLayout
                    android:id="@+id/id_btn1_bottom_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:background="@drawable/background_bottom"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:id="@+id/id_top_btn1_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_top"
                        android:layout_marginBottom="4dp">


                        <TextView
                            android:id="@+id/id_btn1_quiz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/black_grey"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="true"
                            android:text="A"/>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_btn3_bottom_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:background="@drawable/background_bottom"
                    android:layout_marginTop="5dp">


                    <RelativeLayout
                        android:id="@+id/id_top_btn3_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_top"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/id_btn3_quiz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black_grey"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="true"
                            android:text="c"/>


                    </RelativeLayout>


                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="50"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <RelativeLayout
                    android:id="@+id/id_btn2_bottom_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:background="@drawable/background_bottom"
                    android:layout_marginBottom="5dp">


                    <RelativeLayout
                        android:id="@+id/id_top_btn2_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_top"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/id_btn2_quiz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black_grey"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="true"
                            android:text="B"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_btn4_bottom_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:background="@drawable/background_bottom"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:id="@+id/id_top_btn4_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_top"
                        android:layout_marginBottom="4dp">


                        <TextView
                            android:id="@+id/id_btn4_quiz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black_grey"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:clickable="true"
                            android:text="D"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>
